# Production environment template
# Copy this to .env.local and uncomment/fill in sensitive values

# FastAPI / DB
DB_AUTO_CREATE=0  # Production: use migrations
SQLALCHEMY_ECHO=0
DB_SEED=0

SPLITTER_TYPE=hierarchical
SPLITTER_CONFIG__MAX_CHARS=1000

AUDIO_CACHE_TYPE=sqlite
AUDIO_CACHE_CONFIG__PATH=/data/audio_cache

DOCUMENT_CACHE_TYPE=sqlite
DOCUMENT_CACHE_CONFIG__PATH=/data/document_cache
DOCUMENT_CACHE_TTL_WEBPAGE=86400  # 24 hours
DOCUMENT_CACHE_TTL_DOCUMENT=604800  # 7 days
DOCUMENT_MAX_DOWNLOAD_SIZE=104857600 # 100 MB

# Gateway
# DATABASE_URL=postgresql+asyncpg://user:pass@host:5432/dbname
# REDIS_URL=redis://redis:6379/0
CORS_ORIGINS='["https://your-domain.com"]'

# Worker / Processor
TTS_PROCESSORS_FILE=tts_processors.prod.json
DOCUMENT_PROCESSORS_FILE=document_processors.prod.json

# Stack Auth - fill with production values
STACK_AUTH_API_HOST=http://stack-auth:8102
STACK_AUTH_APP_HOST=http://stack-auth:5173
# STACK_AUTH_PROJECT_ID=
# STACK_AUTH_SERVER_KEY=
# STACK_AUTH_CLIENT_KEY=

# Postgres
# POSTGRES_USER=
# POSTGRES_PASSWORD=
# POSTGRES_DB=

# RunPod
# RUNPOD_API_KEY=
RUNPOD_REQUEST_TIMEOUT_SECONDS=60 # TODO tune
BROWSER_REQUESt_TIMEOUT_SECONDS=60
SYNTHESIS_POLLING_TIMEOUT_SECONDS=90 # Gateway long-polling timeout (should be > RUNPOD_REQUEST_TIMEOUT_SECONDS)

