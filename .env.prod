# Gateway
DB_AUTO_CREATE=1
DB_DROP_AND_RECREATE=0
SQLALCHEMY_ECHO=0
DB_SEED=0

AUDIO_CACHE_TYPE=sqlite
AUDIO_CACHE_CONFIG__PATH=/data/audio_cache
LOG_DIR=/data/gateway/logs

DOCUMENT_CACHE_TYPE=sqlite
DOCUMENT_CACHE_CONFIG__PATH=/data/document_cache
DOCUMENT_CACHE_TTL_WEBPAGE=1800
DOCUMENT_CACHE_TTL_DOCUMENT=604800
DOCUMENT_MAX_DOWNLOAD_SIZE=104857600
IMAGES_DIR=/data/images
MAX_BLOCK_CHARS=150

REDIS_URL=redis://redis:6379/0
CORS_ORIGINS=["https://yapit.md"]

# Worker / Processor
TTS_PROCESSORS_FILE=tts_processors.prod.json
TTS_OVERFLOW_QUEUE_THRESHOLD=8
TTS_BUFFER_BEHIND=8
TTS_BUFFER_AHEAD=16
DOCUMENT_PROCESSORS_FILE=document_processors.prod.json
KOKORO_CPU_REPLICAS=8
OMP_NUM_THREADS=2

# Postgres
POSTGRES_USER=yapit_prod
POSTGRES_DB=yapit_prod

# Stack Auth - gateway
STACK_AUTH_API_HOST=http://stack-auth:8102
STACK_AUTH_APP_HOST=http://stack-auth:8101

# Stack Auth container
NEXT_PUBLIC_STACK_API_URL=https://auth.yapit.md
NEXT_PUBLIC_STACK_DASHBOARD_URL=https://auth.yapit.md
STACK_SEED_INTERNAL_PROJECT_ALLOW_LOCALHOST=true
STACK_SEED_INTERNAL_PROJECT_SIGN_UP_ENABLED=false
STACK_RUN_MIGRATIONS=true
STACK_SKIP_SEED_SCRIPT=false

RUNPOD_REQUEST_TIMEOUT_SECONDS=60
CLIENT_REQUEST_TIMEOUT_SECONDS=60
SYNTHESIS_POLLING_TIMEOUT_SECONDS=90

# Stripe / Billing
BILLING_ENABLED=true
