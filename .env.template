# copy to .env and fill in values
# for prod: these go in .env.sops (encrypted), deploy.sh syncs to Dokploy

# Postgres

DATABASE_URL=postgresql+asyncpg://yapit_prod:PASSWORD@postgres:5432/yapit_prod
POSTGRES_PASSWORD=

# Stack Auth - fill after creating project via dashboard (SSH tunnel to port 8101)
STACK_AUTH_PROJECT_ID=
STACK_AUTH_SERVER_KEY=
STACK_AUTH_CLIENT_KEY=
STACK_DATABASE_CONNECTION_STRING=postgres://yapit_prod:YOUR_PASSWORD@postgres:5432/yapit_prod
STACK_DIRECT_DATABASE_CONNECTION_STRING=postgres://yapit_prod:YOUR_PASSWORD@postgres:5432/yapit_prod
STACK_SERVER_SECRET=

# API Keys
RUNPOD_API_KEY=
MISTRAL_API_KEY=
INWORLD_API_KEY=

# Stripe / Billing
# Set BILLING_ENABLED=false for self-hosting (disables subscription/usage limits)
BILLING_ENABLED=true
# Use _TEST for dev, _LIVE for prod â€” `make dev-env` transforms automatically
STRIPE_SECRET_KEY_TEST=
STRIPE_SECRET_KEY_LIVE=
STRIPE_WEBHOOK_SECRET_TEST=
STRIPE_WEBHOOK_SECRET_LIVE=
