# .env.sops structure template
# Decrypt with: make dev-env (for dev) or make prod-env (for prod)
#
# Convention:
#   DEV_*     → copied only by `make dev-env`, prefix stripped
#   PROD_*    → copied only by `make prod-env`, prefix stripped
#   _*        → never copied (reference/inactive)
#   no prefix → copied to both dev and prod as-is

# Postgres
PROD_DATABASE_URL=postgresql+asyncpg://yapit_prod:PASSWORD@postgres:5432/yapit_prod
PROD_POSTGRES_PASSWORD=

# Metrics DB
PROD_METRICS_DB_USER=metrics
PROD_METRICS_DB_PASSWORD=
PROD_METRICS_DATABASE_URL=postgresql://metrics:PASSWORD@metrics-db:5432/metrics

# Stack Auth (prod only - dev uses .env.dev)
PROD_STACK_AUTH_PROJECT_ID=
PROD_STACK_AUTH_SERVER_KEY=
PROD_STACK_AUTH_CLIENT_KEY=
PROD_STACK_DATABASE_CONNECTION_STRING=postgres://yapit_prod:PASSWORD@postgres:5432/yapit_prod
PROD_STACK_DIRECT_DATABASE_CONNECTION_STRING=postgres://yapit_prod:PASSWORD@postgres:5432/yapit_prod
PROD_STACK_SERVER_SECRET=

# Stack Auth email (prod only)
PROD_STACK_EMAIL_HOST=
PROD_STACK_EMAIL_PORT=
PROD_STACK_EMAIL_USERNAME=
PROD_STACK_EMAIL_PASSWORD=
PROD_STACK_EMAIL_SENDER=
PROD_STACK_FREESTYLE_API_KEY=

# API Keys
DEV_RUNPOD_API_KEY=
DEV_GOOGLE_API_KEY=
DEV_INWORLD_API_KEY=

PROD_RUNPOD_API_KEY=
PROD_GOOGLE_API_KEY=
PROD_INWORLD_API_KEY=

# Endpoints - not technically secret, allows easy switching between dev/prod + defense in depth
DEV_KOKORO_RUNPOD_SERVERLESS_ENDPOINT=
PROD_KOKORO_RUNPOD_SERVERLESS_ENDPOINT=
DEV_YOLO_RUNPOD_SERVERLESS_ENDPOINT=
PROD_YOLO_RUNPOD_SERVERLESS_ENDPOINT=

# Stripe
# Webhook secret: run `docker logs yapit-stripe-cli-1` to get the signing secret
# (It's stable per Stripe account, only changes if you change the API key)
DEV_STRIPE_SECRET_KEY=
DEV_STRIPE_WEBHOOK_SECRET=
PROD_STRIPE_SECRET_KEY=
PROD_STRIPE_WEBHOOK_SECRET=

