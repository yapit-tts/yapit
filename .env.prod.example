# Production environment template
# Copy this to .env for production deployment

# FastAPI / DB
DB_DROP_AND_RECREATE=0  # Production: use migrations
SQLALCHEMY_ECHO=0
DB_SEED=0

SPLITTER_TYPE=hierarchical
SPLITTER_CONFIG__MAX_CHARS=1000

AUDIO_CACHE_TYPE=sqlite
AUDIO_CACHE_CONFIG__PATH=/data/audio_cache

# Gateway
DATABASE_URL=  # postgresql+asyncpg://user:pass@host:5432/dbname
REDIS_URL=  # redis://redis:6379/0
CORS_ORIGINS=  # '["https://your-domain.com"]'

# Worker settings
REDIS_CACHE_EXPIRY_SECONDS=3600  # 1 hour

# Stack Auth - fill with production values
STACK_AUTH_API_HOST=
STACK_AUTH_APP_HOST=
STACK_AUTH_PROJECT_ID=
STACK_AUTH_SERVER_KEY=
STACK_AUTH_CLIENT_KEY=

# Postgres
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=

# RunPod
RUNPOD_API_KEY=
RUNPOD_ENDPOINTS_FILE=runpod-endpoints.json
RUNPOD_REQUEST_TIMEOUT_SECONDS=60

