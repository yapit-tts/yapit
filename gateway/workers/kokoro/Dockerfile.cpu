FROM python:3.12-slim

ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update && \
    apt-get install -y --no-install-recommends espeak-ng tini && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY gateway/workers/kokoro/requirements.cpu.txt .
RUN pip install --no-cache-dir -r requirements.cpu.txt

COPY gateway/ /app/gateway

ENV PYTHONUNBUFFERED=1
ENTRYPOINT ["tini","--"]
CMD ["python", "-m", "gateway.workers.kokoro.worker"]
